<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<mainView xmlns="http://jmix.io/schema/flowui/main-view"
          title="msg://MainView.title">
    <appLayout>
        <navigationBar/>
        <drawerLayout/>
        <initialLayout>
            <vbox id="layout"
                  visible="false">
                <hbox classNames="buttons-panel">
                    <button id="createButton"
                            icon="PLUS"
                            themeNames="primary success"/>
                    <button id="editButton"
                            icon="EDIT"
                            themeNames="primary"
                            enabled="false"/>
                    <button id="removeButton"
                            icon="TRASH"
                            themeNames="primary error"
                            enabled="false"/>
                    <button id="refreshButton"
                            icon="REFRESH"/>
                </hbox>
            </vbox>
        </initialLayout>
    </appLayout>
</mainView>